{% extends 'layout/base-layout.html.twig' %}
{% block title %} Finances  {% endblock %}
{% block page_title %}Finances{% endblock %}
{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="row pull-right">
                <a href="/landlord/#payments/newincome" class="btn btn-success addnew push">
